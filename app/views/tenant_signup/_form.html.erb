<%= form_for(@tenant, url: signup_create_tenant_signup_index_path, html: { novalidate: 'novalidate' }) do |f| %>
  <%= render 'error_messages' %>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email address' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password' %>
  </div>
  <div class="form-group">
    <%= f.text_field :subdomain, class: 'form-control', placeholder: 'Store name' %>
  </div>
  <div class="form-group">
    <%= f.select(:category_id, options_for_select(categories), {include_blank: 'Select Category'}, {class: 'form-control'}) %>
  </div>
  <%= f.submit "Create Account", class: 'btn btn-primary btn-block' %>
<% end %>