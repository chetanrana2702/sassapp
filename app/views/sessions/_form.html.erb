<%= form_for(:sessions, url: admin_signin_create_path, html: { novalidate: 'novalidate' }) do |f| %>
  <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "alert alert-danger #{key}" %>
  <% end %>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email address' %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
  </div>
  <%= f.submit "Sign in", class: 'btn btn-primary btn-block' %>
<% end %>